<header>
  <h1>Flipcards</h1>
</header>
<div class="main_container">
  <form class="create_deck" action="/new_deck" method="post">
    <a href="/logout"><i class="material-icons logout">power_settings_new</i></a>
    <h3>{{currentUser}}</h3>
    <input type="text" name="title" placeholder="Deck title">
    <div class="textarea_button">
      <textarea name="description" rows="2" cols="95" placeholder="Describe this deck?"></textarea>
      <button type="submit" name="submit">Post</button>
    </div>
  </form>
  <div class="deck_collection">
    {{#decks}}
    <div class="single_deck">
      <a href="/cards/{{id}}">
        <h4>{{title}}</h4>
        <h5>{{description}}</h5>
      </a>
      <form class="create_card" action="/new_card/{{id}}" method="post">
        <h4>Create a new flipcard for this deck</h4>
        <input type="text" name="front" placeholder="Front of card">
        <input type="text" name="back" placeholder="Back of card">
        <button type="submit" name="submit">Submit</button>
      </form>
      <a href="/quiz/{{id}}"><i class="material-icons">live_help</i><p>Take a quiz!</p></a>
    </div>
    {{/decks}}
  </div>
</div>
