<header>
  <h1>Flipcards</h1>
</header>
<div class="main_container">
  <form class="header_card" action="/new_card_header/{{thisDeckId}}" method="post">
    <h3>{{currentUser}}</h3>
    <input type="text" name="front" placeholder="Front of Card">
    <input type="text" name="back" placeholder="Back of Card">
    <div class="textarea_button">
      <button type="submit" name="submit">Create flipcard</button>
    </div>
  </form>
  <div class="card_collection">
    {{#cards}}
    <div class="single_card">
      <form class="edit_flipcard{{id}}" action="/edit_flipcard" method="post">
        <h4>Front</h4>
        <input type="text" name="front" value="{{front}}">
        <h4>Back</h4>
        <input type="text" name="back" value="{{back}}">
        <button type="submit" name="submit">Submit Changes</button>
      </form>
      <a href="/remove/{{thisDeckId}}/{{id}}"><i class="material-icons delete">delete_forever</i></a>
    </div>
    {{/cards}}
  </div>
</div>
